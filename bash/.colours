# Colours for bash prompt

# Set Solorized Colours

if tput setaf 1 &> /dev/null; then
	tput sgr0; # reset colors
	bold=$(tput bold);
	reset=$(tput sgr0);
	# Solarized colors, taken from http://git.io/solarized-colors.
    base03=$(tput setaf 234);
    base02=$(tput setaf 235);
    base01=$(tput setaf 240);
    base00=$(tput setaf 241);
    base0=$(tput setaf 244);
    base1=$(tput setaf 245);
    base2=$(tput setaf 254);
    base3=$(tput setaf 230);
	yellow=$(tput setaf 136);
	orange=$(tput setaf 166);
	red=$(tput setaf 124);
	magenta=$(tput setaf 125);
	violet=$(tput setaf 61);
	blue=$(tput setaf 33);
	cyan=$(tput setaf 37);
	green=$(tput setaf 64);

	black=$(tput setaf 0);
	white=$(tput setaf 15);
else
	bold='';
	reset="\e[0m";

    base03="\e[1;33m";
    base02="\e[1;33m";
    base01="\e[1;33m";
    base00="\e[1;33m";
    base0="\e[1;33m";
    base1="\e[1;33m";
    base2="\e[1;33m";
    base3="\e[1;33m";
    
	yellow="\e[1;33m";
	orange="\e[1;33m";
	red="\e[1;31m";
	magenta="\e[1;35m";
	violet="\e[1;35m";
	blue="\e[1;34m";
	cyan="\e[1;36m";
	green="\e[1;32m";

	black="\e[1;30m";
	white="\e[1;37m";
fi;

